set $vert_adj 15
set $horz_adj 20
set $vert_adj_large 50
set $horz_adj_large 75


# resize window (you can also use the mouse for that)
mode "resize" {
     # These bindings trigger as soon as you enter the resize mode

     # Pressing left will shrink the window‚Äôs width.
     # Pressing right will grow the window‚Äôs width.
     # Pressing up will shrink the window‚Äôs height.
     # Pressing down will grow the window‚Äôs height.
     bindsym j resize shrink width $horz_adj_large
     bindsym k resize grow height $vert_adj_large
     bindsym l resize shrink height $vert_adj_large
     bindsym semicolon resize grow width $horz_adj_large

     # same bindings, but for the arrow keys
     bindsym Left resize shrink width $horz_adj_large
     bindsym Down resize grow height $vert_adj_large
     bindsym Up resize shrink height $vert_adj_large
     bindsym Right resize grow width $horz_adj_large


     #alt keys to do smaller adjustments
     bindsym Mod1+j resize shrink width $horz_adj
     bindsym Mod1+k resize grow height $vert_adj
     bindsym Mod1+l resize shrink height $vert_adj
     bindsym Mod1+semicolon resize grow width $horz_adj

     # same bindings, but for the arrow keys
     bindsym Mod1+Left resize shrink width $horz_adj
     bindsym Mod1+Down resize grow height $vert_adj
     bindsym Mod1+Up resize shrink height $vert_adj
     bindsym Mod1+Right resize grow width $horz_adj

     # back to normal: Enter or Escape or $mod``+r
     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
     status_command i3status
     colors {
      background #303030
      statusline #e6e6e6
     }
}

