general {
	output_format = "i3bar"
	colors = true
	interval = 5
	color_good = "#3ba769"
	color_degraded = "#316fa6"
	color_bad = "#c14747"
}

order += "read_file weather"
order += "wireless wlp3s0"
order += "memory"
order += "volume master"
order += "tztime utc"
order += "tztime local"

read_file weather {
	format = "%content"
    path = "/tmp/currentconditions.log"
}

wireless wlp3s0 {
	format_up = "%essid (%bitrate), %ip"
	format_down = "Internet down"
}

volume master {
	format = "ðŸ”ˆ: %volume"
	format_muted = "MUTED"
}

cpu_temperature 0 {
        format = "CPU: %degrees Â°C"
				max_threshold = 80
}

memory {
        format = "%used RAM"
        threshold_degraded = "10%"
        format_degraded = "%free FREE"
}

load {
				format = "%5min"
}

tztime local {
        format = "%a %m/%d %I:%M %p"
}

tztime utc {
        format = "%H:%M %Z"
        timezone = "UTC"
}
